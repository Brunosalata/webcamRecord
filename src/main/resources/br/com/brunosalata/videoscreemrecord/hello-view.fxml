<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="510.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.brunosalata.videoscreemrecord.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <Label text="Select webcam:">
            <HBox.margin>
               <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </HBox.margin>
         </Label>
         <ComboBox fx:id="cbWebcamOptions" prefHeight="25.0" prefWidth="250.0">
            <HBox.margin>
               <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </HBox.margin>
         </ComboBox>
      </children>
   </HBox>
   <ImageView fx:id="imgView" fitHeight="480.0" fitWidth="640.0" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS" />
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <children>
          <Button onAction="#takeWebcam" prefHeight="25.0" prefWidth="100.0" text="Video Start">
            <HBox.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </HBox.margin>
         </Button>
         <Button onAction="#stopWebcam" prefHeight="25.0" prefWidth="100.0" text="Video Stop">
            <HBox.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </HBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#takePic" prefHeight="25.0" prefWidth="100.0" text="Take Picture">
            <HBox.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
</VBox>
